<%- include('partials/header') -%>
<section class="container">
<h3>Add Story</h3>
<div class="row">
    <%# CHANGE BY NOTHINGREMAINS: removed enctype (requires multer to use), changed action to /entries/add %>
   <form action="/entries/add" method="POST" class="col s12">
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title">
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                 <select id="status" name="status">
                   <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                </select>
                
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Tell Us Your Story:</h5>
                <textarea id="body" name="body"></textarea>
            </div>
        </div>

        <div class="row">
            <%# CHANGE BY NOTHINGREMAINS: changed value from Upload to Submit (multer again) %>
            <button type="submit" class="btn btn-dark add-btn" value="Submit">Submit</button>
            <a href="/dashboard" class="btn btn-dark add-btn">Cancel</a>
        </div>
    </form>
</div>
</section>
<%- include('partials/footer') -%>